<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="widthmatch_heightwrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="widthmatch_heightmatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="lighttraveltextview" parent="widthmatch_heightwrap">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/logotextsize</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="whatistextview" parent="widthmatch_heightwrap">
        <item name="android:layout_marginBottom">@dimen/defmargin</item>
        <item name="android:layout_marginTop">@dimen/defmargin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="hline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/defmargin</item>
        <item name="android:layout_marginBottom">@dimen/defmargin</item>
    </style>

    <style name="datalines">
        <item name="android:layout_marginBottom">@dimen/mainpadding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/drawablepadding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="mottoview" parent="widthmatch_heightwrap">
        <item name="android:layout_marginTop">@dimen/defmargin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>